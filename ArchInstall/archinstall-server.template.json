{
    "audio": "none",
    "bootloader": "grub-install",
    "harddrives": [
        "$DRIVE"
    ],
    "hostname": "$HOSTNAME",
    "kernels": [
        "linux"
    ],
    "superusers": {
        "$USER": {
        "!password": "$PASSWORD"
        }
    },
    "keyboard-layout": "us",
    "mirror-region": {
        "Taiwan": {
            "https://free.nchc.org.tw/arch/$repo/os/$arch": true,
            "https://shadow.ind.ntou.edu.tw/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
        "NetworkManager": true,
        "nic": "Use NetworkManager (necessary to configure internet graphically in GNOME and KDE)"
    },
    "ntp": true,
    "packages": [
        "base-devel",
        "git",
        "openssh",
        "htop",
        "neofetch",
        "gvim",
        "cronie",
        "docker",
        "docker-compose",
        "fish",
        "zsh",
        "starship",
        "rsync",
        "tmux",
        "zip",
        "unzip",
        "unrar",
        "wget",
        "curl",
        "jq"
    ],
    "custom-commands": [
        "systemctl enable sshd",
        "systemctl enable docker",
        "usermod -aG docker $USER"
    ],
    "profile": {
        "path": "/usr/lib/python3.10/site-packages/archinstall/profiles/minimal.py"
    },
    "swap": false,
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Asia/Taipei"
}
