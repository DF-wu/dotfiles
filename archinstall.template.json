{
  "bootloader": "grub-install",
  "filesystem": "ext4",
  "harddrive": {
    "model": null,
    "path": "$DRIVE",
    "size": "$SIZE"
  },
  "timezone": "Asia/Taipei",
  "mirror-region": {
    "Taiwan": {
      "https://free.nchc.org.tw/arch/$repo/os/$arch": true,
      "https://shadow.ind.ntou.edu.tw/archlinux/$repo/os/$arch": true
    }
  },
  "audio": "pulseaudio",
  "custom-commands": [
    "systemctl enable sshd",
    "systemctl enable docker",
    "usermod -aG docker $USER"
  ],
  "packages": [
    "plasma-meta",
    "sddm",
    "plasma-wayland-session",
    "egl-wayland",
    "ark",
    "audiocd-kio",
    "dolphin",
    "dolphin-plugins",
    "ffmpegthumbs",
    "gwenview",
    "k3b",
    "kamoso",
    "kate",
    "kcalc",
    "kcharselect",
    "kcolorchooser",
    "kcron",
    "kdeconnect",
    "kdegraphics-mobipocket",
    "kdegraphics-thumbnailers",
    "kdenetwork-filesharing",
    "kdenlive",
    "kdesdk-thumbnailers",
    "kdialog",
    "kfind",
    "kgpg",
    "kio-gdrive",
    "kmix",
    "kolourpaint",
    "konsole",
    "ksystemlog",
    "kwalletmanager",
    "kwrite",
    "okular",
    "partitionmanager",
    "print-manager",
    "spectacle",
    "zeroconf-ioslave",
    "base-devel",
    "git",
    "openssh",
    "htop",
    "neofetch",
    "gvim",
    "alacritty",
    "kitty",
    "archlinux-wallpaper",
    "elementary-wallpapers",
    "kvantum-qt5",
    "cronie",
    "ccid",
    "docker",
    "fish",
    "zsh",
    "starship",
    "gimp",
    "gimp-help-en",
    "firefox",
    "firefox-i18n-en-us",
    "firefox-i18n-zh-tw",
    "gnome-keyring",
    "gnu-free-fonts",
    "fcitx5-im",
    "fcitx5-rime",
    "fcitx5-mozc",
    "noto-fonts",
    "noto-fonts-cjk",
    "noto-fonts-emoji",
    "noto-fonts-extra",
    "nvm",
    "rsync",
    "vlc",
    "smplayer",
    "tmux",
    "ttf-dejavu",
    "ttf-hack",
    "opendesktop-fonts",
    "ttf-lato",
    "ttf-liberation",
    "ttf-opensans",
    "ttf-roboto",
    "ttf-roboto-mono",
    "zip",
    "unzip",
    "unrar",
    "wget",
    "curl",
    "jq",
    "youtube-dl",
    "xbindkeys",
    "xdotool",
    "jdk11-openjdk",
    "jdk-openjdk",
    "maven"
  ],
  "kernels": ["linux"],
  "superusers": {
    "$USER": {
      "!password": "$PASSWORD"
    }
  },
  "!root-password": "$PASSWORD",
  "hostname": "$HOSTNAME",
  "keyboard-language": "us",
  "nic": {
    "NetworkManager": true
  },
  "ntp": true,
  "profile": "xorg",
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "users": {}
}
